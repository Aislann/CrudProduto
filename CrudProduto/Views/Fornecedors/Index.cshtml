@model IEnumerable<CrudProduto.Models.Fornecedor>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Lista de Fornecedores</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Criar Novo</a>
</p>
<table class="table" id='tableFornecedores'>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.IdFornecedor">Editar</a> |
                    <a class="btn btn-success" asp-action="Details" asp-route-id="@item.IdFornecedor">Detalhes</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.IdFornecedor">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
